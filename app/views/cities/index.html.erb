<div class="page-header">
  <h1>
    Cities
    <a href="/cities/new" class="btn btn-lg btn-success">New City</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Temp c</th>
        <th>Temp f</th>
        <th>Weather</th>
        <th>City name</th>
        <th>Actions</th>
      </tr>

      <% @cities.each do |city| %>
      <tr>
        <td><%= city.user.email %></td>
        <td><%= city.temp_c %></td>
        <td><%= city.temp_f %></td>
        <td><%= city.weather %></td>
        <td><%= city.city_name %></td>
        <td>
          <a href="/cities/<%= city.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == city.user %>
            <a href="/cities/<%= city.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_city/<%= city.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @cities, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
